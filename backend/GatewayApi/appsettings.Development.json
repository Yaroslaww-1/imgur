{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ElasticsearchOptions": {
    "IndexFormat": "api-gateway-logs-{0:yyyy.MM.dd}",
    "ConnectionString": "http://localhost:9200"
  },
  "LoggerOptions": {
    "AppName": "gateway-api"
  },
  "MonitoringOptions": {
    "UseMonitoring": false,
    "UseHttpMetrics": false,
    "UseHealthChecks": false
  }
}
